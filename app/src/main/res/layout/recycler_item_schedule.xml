<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="false"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:padding="15dp">
        <!--android:background="@drawable/click_bg">-->


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:tint="?attr/colorAccent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_av_timer_grey600_18dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:tint="?attr/colorAccent"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvName"
            card_view:layout_constraintLeft_toLeftOf="@+id/imageView2"
            card_view:layout_constraintTop_toTopOf="@+id/tvName"
            card_view:layout_constraintVertical_bias="0.489"
            card_view:srcCompat="@drawable/ic_book_open_grey600_18dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:tint="?attr/colorAccent"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvDesc"
            card_view:layout_constraintLeft_toLeftOf="@+id/imageView3"
            card_view:layout_constraintTop_toTopOf="@+id/tvDesc"
            card_view:layout_constraintVertical_bias="0.444"
            card_view:srcCompat="@drawable/ic_google_maps_grey600_18dp" />

        <TextView
            android:id="@+id/tvTime"
            style="@android:style/TextAppearance.Holo.Widget.ActionMode.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:foregroundGravity="left"
            android:text="13:30 -15:00"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView2"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintLeft_toRightOf="@+id/imageView2"
            card_view:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTime"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:foregroundGravity="left"
            android:text="Общий пробег"
            android:textSize="16sp"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintLeft_toLeftOf="@+id/tvTime"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTime" />

        <TextView
            android:id="@+id/tvDesc"
            style="@android:style/TextAppearance.Holo.Widget.ActionMode.Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:text="5000 км"
            android:textSize="14sp"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintLeft_toLeftOf="@+id/tvName"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvName" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>